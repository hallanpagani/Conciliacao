@model ConciliacaoModelo.model.adm.AccountLoginModel

@{
    ViewBag.PageId = "extr-page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-Br" id="@ViewBag.PageId">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title> Conciliador - Gestão para sua empresa </title>
    <meta name="description" content="">
    <meta name="author" content="">

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Basic Styles -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/font-awesome.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/invoice.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/lockscreen.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/site.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/smartadminproductionplugins.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/smartadminproduction.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/smartadminskins.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/sweetalert2.css"> 
    <!-- FAVICONS -->
    <link rel="shortcut icon" href="~/content/img/favicon/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/content/img/favicon/favicon.ico" type="image/x-icon">

    <!-- GOOGLE FONT -->
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,300,400,700">

    <!-- Specifying a Webpage Icon for Web Clip
         Ref: https://developer.apple.com/library/ios/documentation/AppleApplications/Reference/SafariWebContent/ConfiguringWebApplications/ConfiguringWebApplications.html -->
    <link rel="apple-touch-icon" href="~/content/img/splash/sptouch-icon-iphone.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/content/img/splash/touch-icon-ipad.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/content/img/splash/touch-icon-iphone-retina.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/content/img/splash/touch-icon-ipad-retina.png">

    <!-- iOS web-app metas : hides Safari UI Components and Changes Status Bar Appearance -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <!-- Startup image for web apps -->
    <link rel="apple-touch-startup-image" href="~/content/img/splash/ipad-landscape.png" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:landscape)">
    <link rel="apple-touch-startup-image" href="~/content/img/splash/ipad-portrait.png" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:portrait)">
    <link rel="apple-touch-startup-image" href="~/content/img/splash/iphone.png" media="screen and (max-device-width: 320px)">

    <style>
        #extr-page #header {
            
            height: 49px!important; 
        }
    </style>

</head>

<body class="animated fadeInDown ">
    <!-- HEADER -->
    <header id="header">
        <div id="logo-group">
            <!-- PLACE YOUR LOGO HERE -->
            <span id="logo"> <img src="~/content/img/logo.png" alt="Conciliador"> </span>
            <!-- END LOGO PLACEHOLDER -->
        </div>

       <!-- <section id="top-right">
            <span id="extr-page-header-space"> <span class="hidden-mobile">Criar uma conta?</span> <a href="@Url.Action("register", "account")" class="btn btn-danger">Create account</a> </span>
        </section> -->
    </header>
    <!-- END HEADER -->


    <div id="main" role="main">
        @Html.Partial("_Notificacoes")
        <div id="content" class="container">
            <div class="row">
                @{ Html.RenderPartial("~/views/acesso/_logintext.cshtml"); }
                <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
                    <div class="well no-padding">
                        <form action="@Url.Action("login","sistema")" method="POST" id="login-form" class="smart-form client-form">
                            <header>
                                <span class="widget-icon"> <i class="fa fa-thumbs-o-up"></i>  </span>
                                Entrar no sistema
                            </header>
                            @Html.HiddenFor(m => m.ReturnUrl)
                            @Html.AntiForgeryToken()
                            @Html.ValidationBootstrap()
                            <fieldset>
                                <section>
                                    <label class="label">Login</label>
                                    <label class="input">
                                        <i class="icon-append fa fa-user"></i>
                                        @Html.TextBoxFor(model => model.Email, new { autofocus = "autofocus" })
                                        <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Por favor informe seu login de acesso</b>
                                    </label>
                                </section>

                                <section>
                                    <label class="label">Senha</label>
                                    <label class="input">
                                        <i class="icon-append fa fa-lock"></i>
                                        @Html.PasswordFor(model => model.Password)
                                        <b class="tooltip tooltip-top-right hidden-xs hidden-sm"><i class="fa fa-lock txt-color-teal"></i> Insira seu password</b>
                                    </label>
                                </section>

                                <section>
                                    <label class="checkbox">
                                        <input type="checkbox" name="rememberMe" value="true" checked="checked">
                                        <input type="hidden" name="rememberMe" value="false" />
                                        <i></i>Continue conectado
                                    </label>
                                </section>
                            </fieldset>
                            <footer>
                                <button type="submit" class="btn btn-primary">
                                    Entrar
                                </button>
                            </footer>
                        </form>
                    </div>
                    <!-- { Html.RenderPartial("~/views/acesso/_socialmedia.cshtml"); } -->
                </div>
            </div>
        </div>
    </div>

    @{ Html.RenderPartial("_Scripts"); }

</body>

</html>

<script type="text/javascript">
    $(function () {
        // Validation
        $("#login-form").validate({
            // Rules for form validation
            rules: {
                email: {
                    required: true

                },
                password: {
                    required: true,
                    minlength: 3,
                    maxlength: 20
                }
            },

            // Messages for form validation
            messages: {
                email: {
                    required: 'Informe seu login!',

                },
                password: {
                    required: 'Informe sua senha!'
                }
            },

            // Do not change code below
            errorPlacement: function (error, element) {
                error.insertAfter(element.parent());
            }
        });
    });
</script>
