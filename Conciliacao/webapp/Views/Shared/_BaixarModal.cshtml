@model ConciliacaoModelo.model.generico.FinanceiroBaixa
@using Conciliacao.App_Helpers.Componentes

<!-- Modal -->
<div class="modal fade" id="BaixarModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">
                    <img src="/content/img/logo.png" width="150" alt="Conciliacao">
                </h4>
            </div>

            <div id="content">
                <div class="row">

                    <!-- NEW COL START -->
                    <article class="col-sm-12 col-md-12 col-lg-12">

                        <!-- Widget ID (each widget will need unique ID)-->
                        <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">

                            <header>
                                <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                                <h2>Contas a pagar</h2>

                            </header>
                            <!-- widget div-->
                            <div>
                                <!-- widget edit box -->
                                <div class="jarviswidget-editbox">
                                    <!-- This area used as dropdown edit box -->

                                </div>
                                <!-- end widget edit box -->
                                <div class="widget-body">

                                    @using (Html.BeginForm(null, "Financeiro", FormMethod.Post, new { @class = "form-horizontal" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        <fieldset>
                                            <legend>Baixar título</legend>

                                            <fieldset>
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.ValorBaixa, new { @class = "control-label col-md-2"})
                                                    @Html.TextBoxPadraoFor(model => model.ValorBaixa)
                                                </div>

                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.DataBaixa, new { @class = "control-label col-md-2"})
                                                    @Html.TextBoxPadraoFor(model => model.DataBaixa, new { placeholder = "Data de emissão"})
                                                </div>

                                            </fieldset>


                                        </fieldset>


                                        <div class="form-actions">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="pull-left">
                                                        <a href="#" onclick="$('#BaixarModal').modal('hide');" >Voltar</a>
                                                    </div>
                                                    @Html.BotaoSalvar()
                                                </div>
                                            </div>
                                        </div>

                                    }

                                </div>

                            </div>
                            <!-- end widget div -->

                        </div>
                        <!-- end widget -->

                    </article>
                    <!-- END COL -->

                </div>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->