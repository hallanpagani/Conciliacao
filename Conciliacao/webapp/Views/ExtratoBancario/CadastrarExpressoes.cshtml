@model ConciliacaoModelo.model.cadastros.BancoExpressao

@{
    ViewBag.Title = "Cadastrar expressões bancárias";
    Layout = "~/Views/Shared/Genericas/_Cadastro.cshtml";
    ViewBag.Tamanho = " col-lg-6 ";
}

@using (Html.BeginForm(Html.BeginForm("CadastrarExpressoes", "ExtratoBancario", FormMethod.Post, new { @class = "form-horizontal smart-form" })))
{
    @Html.AntiForgeryToken()
    <div class="row" style="padding-top: 20px;">

        <div class="row">
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.nm_expressao, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.nm_expressao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nm_expressao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.bandeira, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.bandeira, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.bandeira, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.tp_credito_debito, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.tp_credito_debito, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.tp_credito_debito, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="pull-left">
                            @Html.ActionLink("Voltar", "ConsultarExpressoesBancarias", "ExtratoBancario", null, new { @class = "btn btn-warning" })
                        </div>
                        <div class="pull-right">
                            <input type="submit" value="Cadastrar" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

