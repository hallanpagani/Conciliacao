@model VisaoPrincipalSecretariaViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section pagespecific{

    <style>
        .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
            padding: 3px!important;
        }
    </style>

}


<!-- MAIN CONTENT -->
<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">

            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="row">


                    <div class="col-sm-12">

                        <!-- well -->
                        <div class="well">
                            <!-- row -->
                            <div class="row">
                                <!-- col -->
                                <div class="col-sm-12">
                                    <p class="alert alert-info">
                                        <i class="fa fa-lg fa-fw fa-info-circle"></i> Os pacientes abaixo terminam suas seções hoje .
                                    </p>
                                    <!-- row -->
                                    <div class="row">
                                        
                                        <div class="widget-body no-padding">
                                            <table id="datatable_tabletools" class="table table-striped table-bordered table-hover" width="100%">
                                                <thead>
                                                    <tr>
                                                        <th class="col-md-2 col-lg-2">
                                                            Nome
                                                        </th>
                                                        <th class="col-md-2 col-lg-2">
                                                            Telefone
                                                        </th>
                                                        <th style="width: 200px">
                                                            Serviço
                                                        </th>
                                                        <th style="width: 90px">
                                                            Tot.Agendado
                                                        </th>
                                                        <th style="width: 70px">
                                                            Em aberto
                                                        </th>
                                                        <th style="width: 70px">
                                                            Confirmou
                                                        </th>
                                                        <th style="width: 60px">
                                                            Faltou
                                                        </th>
                                                        <th style="width: 70px">
                                                            Desmarcou
                                                        </th>
                                                        <th class="col-md-2 col-lg-2">
                                                            Opção
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.ListaAgendaPacientesTerminamHoje)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Nome)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Fone1)
                                                            </td>
                                                            <td style="width: 100px">
                                                                @Html.DisplayFor(modelItem => item.NmServico)
                                                            </td>
                                                            
                                                            <td class="text-align-center">
                                                                @Html.DisplayFor(modelItem => item.Total)
                                                            </td>
 
                                                            <td class="text-align-center">
                                                                @Html.DisplayFor(modelItem => item.EmAberto)
                                                            </td>
                                                           

                                                            <td class="text-align-center">
                                                                @Html.DisplayFor(modelItem => item.Confirmou)
                                                            </td>
                                                            
                                                            <td class="text-align-center">
                                                                @Html.DisplayFor(modelItem => item.Faltou)
                                                            </td>
                                                           
                                                            <td class="text-align-center">
                                                                @Html.DisplayFor(modelItem => item.Desmarcou)
                                                            </td>


                                                            <td>
                                                                @Html.ActionLink("Agendar", "AgendaPacientePorId", "Agenda", new { id = item.Id, nome = item.Nome, id_servico = item.IdServico, nm_servico=item.NmServico }, new { @class = "btn btn-primary" })&nbsp;
                                                                @Html.ActionLink("Finalizar", "AgendaPacienteFinalizar", "Agenda", new { id = item.Id, id_servico = item.IdServico }, new { @class = "btn btn-warning" })
                                                            </td>

                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>

                                        </div>
                                    </div>
                                    <!-- end row -->
                                </div>
                                <!-- end col -->
                            </div>
                            <!-- end row -->
                        </div>
                        <!-- end well -->

                    </div>

                </div>
            </article>

            <article class="col-sm-12 col-md-12 col-lg-6">

                <div class="row">


                    <div class="col-sm-12">

                        <!-- well -->
                        <div class="well">
                            <!-- row -->
                            <div class="row">
                                <!-- col -->
                                <div class="col-sm-12">
                                    <p class="alert alert-info">
                                        <i class="fa fa-lg fa-fw fa-info-circle"></i> Despesas que vencem hoje.
                                    </p>
                                    <!-- row -->
                                    <div class="row">

                                        <div class="">

                                            <div class="widget-body no-padding">
                                                <table id="datatable_tabletools" class="table table-striped table-bordered table-hover" width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th>
                                                                Descrição
                                                            </th>
                                                            <th>
                                                                Valor
                                                            </th>
                                                            <th>
                                                                Saldo
                                                            </th>
                                                            <th>
                                                                Categoria
                                                            </th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.ListaPagar)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.DsDocumento)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Valor)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Saldo)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.NmCategoria)
                                                                </td>

                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- end row -->
                                </div>
                                <!-- end col -->
                            </div>
                            <!-- end row -->
                        </div>
                        <!-- end well -->

                    </div>

                </div>
            </article>

            <article class="col-sm-12 col-md-12 col-lg-6">

                <div class="row">


                    <div class="col-sm-12">

                        <!-- well -->
                        <div class="well">
                            <!-- row -->
                            <div class="row">
                                <!-- col -->
                                <div class="col-sm-12">
                                    <p class="alert alert-info">
                                        <i class="fa fa-lg fa-fw fa-info-circle"></i> Aniversáriantes do mês.
                                    </p>
                                    <!-- row -->
                                    <div class="row">

                                        <div class="">

                                            <div class="widget-body no-padding">
                                                <table id="datatable_tabletools" class="table table-striped table-bordered table-hover" width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th>
                                                                Nome
                                                            </th>
                                                            <th>
                                                                Telefone
                                                            </th>
                                                            <th>
                                                                Email
                                                            </th>
                                                            <th>
                                                                Dt.Nasc
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.ListaAniversario)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.nome.Split(' ')[0])
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.fone1)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.email)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.DtNascString)
                                                                </td>

                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- end row -->
                                </div>
                                <!-- end col -->
                            </div>
                            <!-- end row -->
                        </div>
                        <!-- end well -->

                    </div>

                </div>
            </article>

            <!-- row -->




        </div>
        <!-- MAIN CONTENT -->
    </section>

</div>

<!-- widget grid -->
